<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<style>
	#menu, #bottom{display:none;}
</style>
<script>
	$(()=>{
		$("#zip").click(){
			if($("#doro").val()==""){
				alert("도로명을 입력후 우편번호찾기를 하세요.");
			}else{
				
				var rul = "/myapp/zipFind";
				var params = "doro="+$("#doro").val(); //doro=이어도로
				$.ajax({
					type :"GET",
					url  : url,
					data : params,
					success:function(result){
						//result에 List가 저장되어있다.
						var $result = $(result);
						var tag = "";
						$result.each(function(idx, vo){
							tag += "<li>"+vo.getZipcodeFull +"</li>"
						});
						console.log(tag);
						$("#zipList").html(tag);
					},error:function(){
						console.log("우편번호 가져오기 실패");
					}
				})
				
			}
		}
	});
</script>
<div>
	<div>도로명을 입력후 우편번호찾기를 선택하세요.</div>
	도로명
	<input type="text" name="doro" id="doro"/>
	<input type="button" id="zip" value ="우편번호찾기"/>
	
	<hr/>
	<ul id="zipList">
		
	</ul>
</div>
	